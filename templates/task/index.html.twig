{% extends 'base.html.twig' %}

{% block title %}Liste des t√¢ches{% endblock %}

{% block body %}
    <div class="container">
        <table class="table-striped table-bordered" id="tasksTable">
            <thead>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Date effective</th>
            </thead>
                <tbody>
                {% if tasks is defined %}
                    {% for task in tasks %}
                    <tr>
                        <th scope='row'>{{ task.id }}</th>
                            <td>{{ task.name }}</td>
                            <td>{{ task.description }}</td>
                            <td></td>
                    </tr>
                        
                    {% endfor %}
                {% endif %}
                </tbody>
        </table>
    </div>


{% endblock %}
